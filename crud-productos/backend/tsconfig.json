{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ESNext"],
        "target": "esnext",
        "moduleResolution": "nodenext",
        "module": "nodenext",
        "strict": false,
        "sourceMap":true,
        "esModuleInterop": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["node","jest","supertest"]
    },
 "include": [
        "src/**/*.ts"
    ],
 "exclude": ["src/**/*.test.ts"]
}